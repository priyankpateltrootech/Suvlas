<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/custom_menu_linear">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_custom_menu_unselected"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/custom_menu_itm"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_custom_menu_selected"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/custom_menu_itm_selected"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_custom_menu_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pita"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_custom_menu_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pita"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>
