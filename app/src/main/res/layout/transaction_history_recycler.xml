<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/unreadmsgbg"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/liner_transfer_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_sub1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_transfer_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:src="@drawable/logo_circle" />

                <TextView
                    android:id="@+id/txt_tranfer_transactionid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_transfer_balance"
                    android:paddingTop="15dp"
                    android:text="@string/autoreload"
                    android:textColor="@color/loginbtn"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_transfer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tranfer_transactionid"
                    android:layout_toRightOf="@+id/img_transfer_balance"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_tranfer_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_transfer_time"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txt_transfer_amount"
                    android:text="@string/ordertotal"
                    android:textColor="@color/loginbtn"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_transfer_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txt_transfer_time"
                    android:layout_marginRight="20dp"
                    android:text="$ 8.50"
                    android:textColor="@color/loginbtn"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />
        </LinearLayout>
</LinearLayout>
