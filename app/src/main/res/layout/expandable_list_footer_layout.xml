<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/footer_layout"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resume_order_txt_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_subtotal"
            android:layout_toStartOf="@+id/resume_order_txt_subtotal"
            android:padding="5dp"
            android:text="@string/subtotal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resume_order_txt_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/resume_order_txt_discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_discount"
            android:layout_toStartOf="@+id/resume_order_txt_discount"
            android:padding="5dp"
            android:text="@string/discount"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resume_order_txt_itbms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/resume_order_txt_itbms_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_itbms"
            android:layout_toStartOf="@+id/resume_order_txt_itbms"
            android:padding="5dp"
            android:text="@string/itbms"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resume_order_txt_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_shipping"
            android:layout_toStartOf="@+id/resume_order_txt_shipping"
            android:padding="5dp"
            android:text="@string/shipping_charge"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resume_order_txt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_wallet"
            android:layout_toStartOf="@+id/resume_order_txt_wallet"
            android:padding="5dp"
            android:text="@string/wallet_amount"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/loginbtn">


        <TextView
            android:id="@+id/resume_order_txt_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 00.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/resume_order_txt_totalprice"
            android:layout_toStartOf="@+id/resume_order_txt_totalprice"
            android:padding="5dp"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/offer_border_layout">

        <EditText
            android:id="@+id/edt_order_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_close_offer"
            android:layout_toStartOf="@+id/img_close_offer"
            android:textColor="@color/black"
            android:hint="OfferCode"
            android:textColorHint="@color/search_edittext"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/img_close_offer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close_icon"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btn_order_offer_apply"
            android:layout_toStartOf="@+id/btn_order_offer_apply"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_offer"
            android:background="@color/loginbtn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_order_offer_apply" />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/offer_border_layout">

        <EditText
            android:id="@+id/edt_redeem_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_close_redeem"
            android:layout_toStartOf="@+id/img_close_redeem"
            android:textColor="@color/black"
            android:hint="Redeem Point"
            android:inputType="number"
            android:textColorHint="@color/search_edittext"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/img_close_redeem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close_icon"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btn_redeem_offer_apply"
            android:layout_toStartOf="@+id/btn_redeem_offer_apply"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_offer"
            android:background="@color/loginbtn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_redeem_offer_apply" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_order_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/loginbtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
