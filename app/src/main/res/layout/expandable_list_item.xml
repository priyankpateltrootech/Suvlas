<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/txt_exp_item_qty"
        android:layout_toStartOf="@+id/txt_exp_item_qty"/>

    <TextView
        android:id="@+id/resume_exp_order_item_txt_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="12.75"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/txt_exp_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/expandable_img_group"
        android:layout_toLeftOf="@+id/resume_exp_order_item_txt_price"
        android:layout_toStartOf="@+id/resume_exp_order_item_txt_price"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>