<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_order_menu"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/gray_logo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/txt_menu_combo_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Chicken Yeero Pita Combo"/>

            <TextView
                android:id="@+id/txt_category_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:text=""/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rel_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_second"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/txt_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_chkbox"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:text="1"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/btn_decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/popup_minus"
                android:layout_toLeftOf="@+id/txt_item_quantity"
                android:clickable="true"/>
            <Button
                android:id="@+id/btn_increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/popup_plus"
                android:layout_toRightOf="@+id/txt_item_quantity"
                android:clickable="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
