<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/liner_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/relative_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_goldstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:text="@string/item_deta"
                android:textColor="@color/loginbg"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_goldstatus"
                android:background="@color/toolbar_view" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/liner_sub2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_sub1"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_second"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/txt_desimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/popup_chkbox"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:text="1"
                    android:layout_centerInParent="true"
                     />

                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/popup_minus"
                    android:layout_toLeftOf="@+id/txt_desimal"
                    android:clickable="true"/>
                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/popup_plus"
                    android:layout_toRightOf="@+id/txt_desimal"
                    android:clickable="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_second"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/chec_box1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/popup_chkbox"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_itemname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chec_box1"
                    android:textColor="@color/loginbg"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_custm_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chec_box1"
                    android:layout_below="@+id/txt_itemname"
                    android:text="pan pita-chicken"
                    android:textColor="@color/loginbtn"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_custm_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chec_box1"
                    android:layout_below="@+id/txt_custm_item1"
                    android:text="salsa de tomate"
                    android:textColor="@color/loginbtn"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView

                    android:id="@+id/txt_custm_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$"
                    android:textColor="@color/loginbg"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_second"
                android:layout_margin="15dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/chec_box2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/popup_chkbox" />

                <TextView
                    android:id="@+id/txt_itemname_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chec_box2"
                    android:text="Combo papas + soda "
                    android:textColor="#DEDFE1"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/txt_custm_item3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$ 2.20"
                    android:textColor="#DEDFE1"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/loginbtn"
                android:text="@string/cancel_order"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/loginbtn"
                android:text="@string/confirm_menu_order"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>