<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/checkbox_modifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_combo_modifier_price"
            android:layout_toStartOf="@+id/txt_combo_modifier_price"
            android:buttonTint="@color/loginbtn"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_combo_modifier_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

</LinearLayout>
