<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_scnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_first"
        android:background="@color/unreadmsgbg">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="15/09/2016"
            android:textStyle="bold"
            android:textColor="@color/unreadmsgtext" />

        <TextView
            android:id="@+id/txt_msgdes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/text_date"
            android:layout_toLeftOf="@+id/back_right"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="@string/msg_descrin"
            android:textColor="@color/unreadmsgtext" />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toLeftOf="@+id/back_right"-->
            <!--android:padding="15dp" />-->

        <ImageView
            android:id="@+id/back_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:padding="7dp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_msgdes1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/black" />

    </RelativeLayout>
</LinearLayout>