<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/expandable_img_group"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/expandable_img_group"
        android:layout_toLeftOf="@+id/txt_exp_qty"
        android:layout_toRightOf="@+id/expandable_img_group"
        android:layout_toStartOf="@+id/txt_exp_qty"
        android:textColor="@color/black"
        android:text="dsdsadsaa"/>

    <TextView
        android:id="@+id/resume_exp_order_txt_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/txt_exp_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/expandable_img_group"
        android:layout_toLeftOf="@+id/resume_exp_order_txt_price"
        android:layout_toStartOf="@+id/resume_exp_order_txt_price"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>