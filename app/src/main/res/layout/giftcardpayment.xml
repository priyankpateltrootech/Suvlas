<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_gift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbtn">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginbtn"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_scnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:src="@drawable/back" />

                    <TextView
                        android:id="@+id/txt_msgg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="12dp"
                        android:text="@string/gift"
                        android:textColor="@color/toolbartitle"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/img_back"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/toolbar_view" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/selectdesign"
                    android:textColor="@color/loginbtn"
                    android:textSize="14dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>

                <common.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    />

                <ImageView
                android:id="@+id/img_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:src="@drawable/gift_card_card" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/loginbg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/giftcarddetail"
                    android:textColor="@color/loginbtn"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/pay1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/img_interest_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/gift_card_card_small"
                        android:tag="women_unselect" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_to"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_gmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/gift_card_gmail" />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_to"
                            android:text="@string/mail"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_email"
                            android:text="@string/amount"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_usd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_email"
                            android:layout_toRightOf="@+id/txt_amount"
                            android:text="a25 USD"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_usd"
                            android:text="@string/message"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_msgdescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_amount"
                            android:layout_toEndOf="@+id/txt_msg"
                            android:layout_toRightOf="@+id/txt_msg"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_scnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/loginbtn">

                <TextView
                    android:id="@+id/txt_creditcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/ceditard"
                    android:textColor="@color/loginbg" />

                <EditText
                    android:id="@+id/edt_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_creditcard"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_whitebg"
                    android:hint="@string/cardholdername"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/relative_scnd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_card"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/cardnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_whitebg"
                        android:hint="@string/edt_cardnumber"
                        android:inputType="number"
                        android:paddingBottom="12dp"
                        android:digits=" 1234567890"
                        android:maxLength="19"
                        android:paddingTop="12dp"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/securitycode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_whitebg"
                        android:hint="@string/securitycode"
                        android:maxLines="1"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/relative_scnd2"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/expirationdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_whitebg"
                        android:hint="@string/exp_date"
                        android:paddingBottom="12dp"
                        android:inputType="date"
                        android:paddingTop="12dp"
                        android:textSize="14dp"
                        android:focusable="false"/>

                    <EditText
                        android:id="@+id/year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_whitebg"
                        android:hint="@string/year"
                        android:maxLines="1"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:textSize="14dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </RelativeLayout>

            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:layout_margin="20dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:paddingLeft="50dp"-->
            <!--android:paddingRight="50dp"-->
            <!--android:text="@string/next"-->
            <!--android:textAllCaps="false"-->
            <!--android:textSize="15dp"-->
            <!--android:textColor="@color/loginbtn" />-->


            <RelativeLayout
                android:id="@+id/rel_procced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txt_procced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/procced"
                    android:textColor="@color/loginbtn" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>