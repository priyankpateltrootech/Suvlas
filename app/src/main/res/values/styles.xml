<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RateDailog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/loginbtn</item>
        <item name="android:background">@color/loginbg</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="@android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
    </style>
</resources>
